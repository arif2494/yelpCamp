<%- include("../partials/header") %>

  <section id="showcase">
    <div class="container">
      <header class="jumbotron">
        <h1 class="display-4">Wellcome TO YelpCamp</h1>
        <p class="lead">View our hand-picked campgrounds from all over the world</p>
        <a class="btn btn-primary btn-lg" href="campgrounds/new"> Click Here To Add New Camp Site</a>
      </header>
    </div>
  </section>

  <section id="camps">
    <div class="container">
      <div class="row">
        <% for(var i=0; i<campgrounds.length; i++){ %>
          <div class="col-md-4 col-sm-6">
            <div class="card mb-4">
              <img class="card-img-top" src="<%= campgrounds[i].image %>">
              <div class="card-body">
                <h4 class="card-title">
                  <%= campgrounds[i].name %>
                </h4>
                <p class="card-text text-muted">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Magnam quasi
                  quo
                  reiciendis
                  quia culpa autem eum maxime voluptates molestias ducimus.</p>
                <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-warning">Read More</a>
              </div>
            </div>
          </div>
          <% } %>
      </div>
    </div>
  </section>



  <%- include("../partials/footer") %>